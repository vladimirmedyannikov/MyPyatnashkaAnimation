<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.medyannikov.mypyatnashka4"
    android:versionName="1.4.1" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:description="@string/description" android:logo="@drawable/logo">
        <service
            android:name=".data.services.MusicService"
            android:enabled="true" >
        </service>

        <activity
            android:name=".ui.game.GameActivity"
            android:noHistory="true" 
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
        </activity>
        
        <activity android:name=".ui.main.MainMenu"
            
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="Records" android:name=".ui.record.RecordsActivity"/>
        <activity android:name=".ui.winner.Winner"/>
        
        <activity android:permission="android.permission.ACCESS_COARSE_LOCATION" android:name=".data.Preferences"></activity>
        <activity android:name=".ui.settings.SettingDialog"
            android:theme="@style/AppDialog"/>
        
    </application>

</manifest>